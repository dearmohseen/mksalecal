<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mkhan.salecalculator.MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editTextInitial"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:hint="Initial Price"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@+id/tableLayout"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/edittextOther"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edittextOther"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Final Price: "
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/adView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/editTextInitial"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextInitial"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/txtFinalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="-/-"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/colorTableBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/btn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonTheme"
                android:text="10%"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btn20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20%"
                style="@style/ButtonThemeAlternate"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btn30"
                style="@style/ButtonTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonThemeAlternate"
                android:text="40%" />

            <Button
                android:id="@+id/btn50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonTheme"
                android:text="50%" />

            <Button
                android:id="@+id/btn60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonThemeAlternate"
                android:text="60%" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonTheme"
                android:text="70%" />

            <Button
                android:id="@+id/btn80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonThemeAlternate"
                android:text="80%" />

            <Button
                android:id="@+id/btn90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ButtonTheme"
                android:text="90%" />

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/edittextOther"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Other %"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCalulate"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnCalulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:background="@color/colorTableBackground"
        android:onClick="calculatePercentage"
        android:text="Calculate"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/edittextOther"
        app:layout_constraintBottom_toBottomOf="@+id/tableLayout"
        android:layout_marginBottom="0dp" />


</android.support.constraint.ConstraintLayout>
