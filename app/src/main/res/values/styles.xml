<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@color/background</item>-->

    </style>

    <style name="MyTextViewLabelStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/label_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_column">0</item>
    </style>

    <style name="MyTextViewValueStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/label_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_span">2</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_column">1</item>
        <item name="android:gravity">start</item>
    </style>

    <!--<style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colorAccent</item>
    </style>-->

    <style name="ButtonTheme" parent="Base.Widget.AppCompat.Button">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/label_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:minWidth">@dimen/btn_min_width</item>
        <item name="android:background">@color/colorButtonPrimary</item>
    </style>

    <style name="ButtonThemeDark" parent="ButtonTheme">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:colorForeground">@color/grey600</item>
    </style>
    <style name="ButtonThemeAlternate" parent="Base.Widget.AppCompat.Button">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/label_size</item>
        <item name="android:minWidth">@dimen/btn_min_width</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorTableBackground</item>
    </style>
</resources>
